<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.cysion.baselib.ui.TopBar
        android:id="@+id/bar_expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cysion.baselib.ui.TopBar>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/enroll_sucess"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="报名成功"
        android:textColor="@color/main_text"
        android:textSize="@dimen/text_larger"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="专属客服会尽快与您取得联系，请保持电话畅通"
        android:textColor="@color/light_text"
        android:textSize="@dimen/text_main"
        />

    <TextView
        android:id="@+id/tv_look"
        android:layout_width="310dp"
        android:layout_gravity="center"
        android:layout_height="44dp"
        android:includeFontPadding="false"
        android:layout_marginTop="110dp"
        android:background="@drawable/shape_tag2"
        android:gravity="center"
        android:text="立即查询"
        android:textColor="@color/main_background"
        android:textSize="@dimen/text_larger"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="310dp"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="支付方式说明:  "
            android:textColor="@color/main_text"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="11dp"
            android:text="了解付款详情，请点击“立即查询”前往。"
            android:textColor="@color/light_text"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>