<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.cysion.baselib.ui.TopBar
        android:id="@+id/bar_expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cysion.baselib.ui.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="橙猫教育目前支持的付款方式为对公汇款"
                android:textColor="@color/main_text"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="您可以通过手机银行app或柜台转账完成"
                android:textColor="@color/light_text"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginTop="20dp"
                android:background="@color/sub_background"
                ></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                android:paddingLeft="16dp"
                android:text="收款账户信息"
                android:textColor="@color/main_text"
                android:textSize="16dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账户账号"
                    android:textColor="@color/sub_text"/>

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_text"
                    tools:text="123456777888888889089"/>

                <TextView
                    android:id="@+id/tv_copy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_account"
                    android:background="@drawable/shape_tag4"
                    android:includeFontPadding="false"
                    android:padding="3dp"
                    android:text="一键复制"
                    android:textColor="@color/red_text"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/sub_background"></View>


            <RelativeLayout
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账户名称"
                    android:textColor="@color/sub_text"/>

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_text"
                    tools:text="橙猫教育"/>

                <TextView
                    android:id="@+id/tv_copy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_account_name"
                    android:background="@drawable/shape_tag4"
                    android:includeFontPadding="false"
                    android:padding="3dp"
                    android:text="一键复制"
                    android:textColor="@color/red_text"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/sub_background"></View>


            <RelativeLayout
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="开户行"
                    android:textColor="@color/sub_text"/>

                <TextView
                    android:id="@+id/tv_account_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_text"
                    tools:text="北京德胜门宇宙银行"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/sub_background"></View>


            <RelativeLayout
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="备注(附言)"
                    android:textColor="@color/sub_text"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_text"
                    tools:text="姓名+手机号"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/sub_background"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginLeft="-100dp"
                android:layout_marginRight="-100dp"
                android:layout_marginTop="24dp"
                android:background="@color/sub_background"
                android:paddingLeft="-100dp"></View>

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                android:text="转账说明"
                android:textColor="@color/main_text"
                android:textSize="16dp"
                />

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:id="@+id/tv_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/light_text"
                tools:text="数据类快递费聚少离多废旧塑料打开方式老地方"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginLeft="-100dp"
                android:layout_marginRight="-100dp"
                android:layout_marginTop="20dp"
                android:background="@color/sub_background"
                android:paddingLeft="-100dp"></View>

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                android:text="温馨提示"
                android:textColor="@color/main_text"
                android:textSize="16dp"
                />

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:id="@+id/tv_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/light_text"
                tools:text="数据类快递费聚少离多废旧塑料打开方式老地方"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>