<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style_more_train">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:layout_marginBottom">34dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/shape_text_more</item>
    </style>

    <!--用户资料页面，容器-->
    <style name="user_info_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <!--用户资料页面，通用文本-->
    <style name="user_info_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_main</item>
    </style>

    <style name="enroll_rl">

        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/main_background</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="enroll_rl_text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="enroll_rl_text_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">13dp</item>
    </style>

</resources>
